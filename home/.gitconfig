[user]
	name = Nathan Craddock
	email = nkcraddock@gmail.com
[push]
	default = simple
[format]
  pretty = format:'%Cred%h%Creset|%C(bold blue)%an%Creset|%s %Cgreen(%cr)%Creset'
[alias]
  l = log
  b = branch
  c = commit
  co = checkout
  d = diff
  dc = diff --cached
  gr = log --graph
  k = !gitk &
  lc = log ORIG_HEAD.. --stat --no-merges
  lp = log --patch-with-stat
  mt = mergetool
  st = status
  spull = !git stash save && git pull --rebase && git stash pop
[core]
	editor = /usr/bin/vim
	excludesfile = ~/.gitignore
