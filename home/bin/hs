#!/usr/bin/env bash
# vim: filetype=sh
#
# an alias for homeshick with "hs update" to pull and link dotfiles

if ! $(command -v homeshick &> /dev/null); then
  echo "homeshick not installed"
  return 1
fi

if $1 = "update"; then
  homeshick pull dotfiles && homeshick link dotfiles
else
  homeshick $@
fi
